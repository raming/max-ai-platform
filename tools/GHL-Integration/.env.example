# GoHighLevel API Monitoring Configuration

# GoHighLevel API Configuration
# Extract these from your JWT token (decode the token to get these values)
GHL_USER_ID=your_user_id_here
GHL_COMPANY_ID=your_company_id_here
GHL_LOCATION_ID=your_location_id_here
GHL_WEBSITE_ID=your_website_id_here

# API Base URL
GHL_API_BASE_URL=https://backend.leadconnectorhq.com

# API Version (date-based, discovered from real API calls)
GHL_API_VERSION=2021-07-28

# Browser Session Token (JWT)
# To get this token:
# 1. Go to https://app.1prompt.com/
# 2. Log in with your GHL credentials
# 3. Open Developer Tools (F12)
# 4. Go to Network tab and look for API requests
# 5. Check the Authorization header for the token
# 6. Copy and paste below (starts with "eyJh...")
GHL_TOKEN=your_token_here

# Admin Panel URL
GHL_ADMIN_URL=https://app.1prompt.com/

# Monitoring Options
VERBOSE=false
LOG_API_CALLS=true
SAVE_DISCOVERY=true
