{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://max-ai/contracts/cycle-aggregate.schema.json",
  "title": "CycleAggregate",
  "type": "object",
  "required": ["id", "periodStart", "periodEnd", "tenantId", "clientId", "metricKey", "quantity"],
  "properties": {
    "id": {"type": "string"},
    "periodStart": {"type": "string", "format": "date-time"},
    "periodEnd": {"type": "string", "format": "date-time"},
    "tenantId": {"type": "string"},
    "clientId": {"type": "string"},
    "metricKey": {"type": "string"},
    "quantity": {"type": "number", "minimum": 0},
    "includedApplied": {"type": "number", "minimum": 0},
    "overageQuantity": {"type": "number", "minimum": 0},
    "valuationSnapshot": {"type": "object"}
  },
  "additionalProperties": false
}
