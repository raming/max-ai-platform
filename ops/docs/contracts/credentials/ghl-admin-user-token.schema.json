{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maxai.com/schemas/credentials/ghl-admin-user-token.schema.json",
  "title": "GHL Admin User Token Set",
  "description": "Admin-user-seeded token set for GHL authentication with session-based refresh",
  "type": "object",
  "properties": {
    "sessionToken": {
      "type": "string",
      "description": "Main JWT session token for user operations",
      "pattern": "^eyJ[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+$",
      "examples": ["eyJhbGciOiJSUzI1NiIsImtpZCI6..."]
    },
    "apiToken": {
      "type": "string",
      "description": "API-specific JWT for API operations",
      "pattern": "^eyJ[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+$",
      "examples": ["eyJhbGciOiJIUzI1NiIsInR5cCI6..."]
    },
    "workflowToken": {
      "type": "string",
      "description": "Automation/workflow token (UUID format)",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "examples": ["53782ca3-33fb-4d72-9f1e-8b4a7c123456"]
    },
    "locationIds": {
      "type": "array",
      "description": "Associated location IDs for multi-location support",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z0-9_-]+$"
      },
      "minItems": 1,
      "examples": [["3MF7Qje6BuQlkuO9gSs5", "yrMl7UtmMqo31qLMP76W"]]
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time",
      "description": "Token expiry time (3600 seconds from issue)",
      "examples": ["2025-10-06T12:30:00Z"]
    },
    "refreshToken": {
      "type": ["string", "null"],
      "description": "Optional refresh token (may not be available in admin-user flow)",
      "examples": [null]
    },
    "tokenType": {
      "type": "string",
      "const": "admin_user",
      "description": "Token type identifier for adapter discrimination"
    },
    "acquiredAt": {
      "type": "string",
      "format": "date-time",
      "description": "When tokens were originally acquired",
      "examples": ["2025-10-06T11:30:00Z"]
    },
    "refreshCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of times tokens have been refreshed",
      "examples": [0, 15, 142]
    }
  },
  "required": [
    "sessionToken",
    "apiToken", 
    "workflowToken",
    "locationIds",
    "expiresAt",
    "tokenType",
    "acquiredAt",
    "refreshCount"
  ],
  "additionalProperties": false
}